<%= stylesheet_link_tag "profile.css" %>


<div class="page-content page-container" id="page-content">
    <div class="padding">
        <div class="row container d-flex justify-content-center">
            <div class="col-xl-6 col-md-12">
                <div class="card user-card-full">
                    <div class="row m-l-0 m-r-0">
                        <div class="col-sm-4 bg-c-lite-green user-profile">
                            <div class="card-block text-center text-white">
                                <div class="m-b-25"> <img src="https://img.icons8.com/bubbles/100/000000/user.png" class="img-radius" alt="User-Profile-Image"> </div>
                                <h6 class="f-w-600"><%= current_user.firstname %> <%= current_user.lastname %></h6>
                                <p>
                                  <% if current_user.has_role? :host %>
                                <%# if current_user.host? %>
                                    <p>Host</p>
                                <% elsif current_user.has_role? :tenant %>
                                    <p>Tenant</p>
                                <% else %>
                                    <p>Viewer</p>
                                <% end %>  
                                </p> <i class=" mdi mdi-square-edit-outline feather icon-edit m-t-10 f-16"></i>
                            </div>
                        </div>
                        <div class="col-sm-8">
                            <div class="card-block">
                                <h6 class="m-b-20 p-b-5 b-b-default f-w-600">Information</h6>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Email</p>
                                        <h6 class="text-muted f-w-400"><%= current_user.email %></h6>
                                    </div>
                                    <div class="col-sm-6">
                                        <p class="m-b-10 f-w-600">Phone</p>
                                        <h6 class="text-muted f-w-400">98979989898</h6>
                                    </div>
                                </div>
                                <h6 class="m-b-20 m-t-40 p-b-5 b-b-default f-w-600">Activities</h6>
                                <div class="row">
                                    <div class="col-sm-6">
                                        <h6 class="text-muted text-danger f-w-400">
                                            <%= link_to "Favourites", favourites_path , class: "text-primary"%>
                                        </h6>
                                        <h6 class="text-muted f-w-400"><%= link_to "My bookings", property_bookings_path(current_user) , class: "text-primary"%>
                                        </h6>
                                    </div>
                                    <div class="col-sm-6">
                                        <h6 class="text-muted text-danger f-w-400">
                                            <%= link_to "Change Password", change_password_path, class: "text-primary"%>
                                        </h6>
                                        <h6 class="text-muted text-danger f-w-400"><%= link_to "Delete my account", registration_path(current_user), method: :delete, data: {confirm: "Are you sure?"} %>
                                        </h6>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-sm-6">
                                        <h6 class="text-muted f-w-400">
                                            <%= link_to "Dashboard",dashboard_index_path, class: "text-primary" %>
                                        </h6>
                                    </div>
                                     <div class="col-sm-6">
                                        <h6 class="text-muted f-w-400">
                                            <%#= link_to "Review", property_reviews_path, class: "text-primary" %>
                                        </h6>
                                    </div>
                                </div>

                                <% if current_user.discount != nil %>

                                <div class="row">
                                    <div class="col-sm-8">
                                        <p class="rainbow-4">You have <%= current_user.discount %> % discount </p>
                                    </div>
                                </div>

                                <% end %>

                                <ul class="social-link list-unstyled m-t-40 m-b-10">
                                    <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="facebook" data-abc="true"><i class="mdi mdi-facebook feather icon-facebook facebook" aria-hidden="true"></i></a></li>
                                    <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="twitter" data-abc="true"><i class="mdi mdi-twitter feather icon-twitter twitter" aria-hidden="true"></i></a></li>
                                    <li><a href="#!" data-toggle="tooltip" data-placement="bottom" title="" data-original-title="instagram" data-abc="true"><i class="mdi mdi-instagram feather icon-instagram instagram" aria-hidden="true"></i></a></li>
                                </ul>
                            </div>
                            <!-- <div class="row">
                                <div class="col-sm-6">
                                    <p>You have a discount</p>
                                </div>
                            </div> -->
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>