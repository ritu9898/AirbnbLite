<%#= form_tag id: "billing-create-payment-method" do  %>
        <%#= link_to "Let's go", add_payment_method_path, remote: true, class: "btn btn-primary" %>
      <%#end %>


<div class="container">
	<div class="card mb-3">
		<div class="container" style="background-color: #d9e0e7;">
			<div class="row">
				<div class="col-md-6">
					<div class="card-body">
						<div class="card-title">
							<p class="card-text">Name : <%= @booking.property&.name %></p>
							<p class="card-text">Cost : <%= @booking.property&.cost %></p>
    						<p class="card-text">People : <%= @booking.property&.people %></p>
               				<p class="card-text">From : <%= @booking.startdate %></p>
                  			<p class="card-text">To : <%= @booking.enddate %></p>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

	
	<div class="row">
         <div class="col-md-6 " style="padding-left: 15vw;">
          <%= link_to "Confirm", billing_index_path, method: :post, class: 'btn btn-outline-primary' %>
        </div> 

        <div>
        	<%#= button_tag "Confirm",  onclick: "location.href='{booking#create}'",
  				type: :button, class: "btn btn-primary" %>
        </div>

        <div class="col-md-6">
          <h6>Total : <%= @booking.total %></h6>
          
        </div>
      </div>

</div>